<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.WithdrawalActivity"
    android:background="@color/bg_color"
    >


    <RelativeLayout
        android:id="@+id/rlHeader"
        android:padding="@dimen/_10sdp"
        android:background="@color/secondary_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_210sdp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_centerVertical="true"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:background="@drawable/withdraw_design"
                />


            <ImageView
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/_14sdp"
                android:layout_height="@dimen/_14sdp"
                android:background="@drawable/star_design"
                />


            <RelativeLayout
                android:id="@+id/rlToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageButton
                    android:id="@+id/ibBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/arrow_left" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Withdraw"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />

            </RelativeLayout>


            <LinearLayout
                android:visibility="invisible"
                android:id="@id/llbank"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_below="@+id/rlToolbar"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:background="@drawable/bank_ic"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update Bank"
                    android:textColor="#353535"
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_medium"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_below="@+id/llbank"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:background="@drawable/star_design"
                    />



                <TextView
                    android:id="@+id/tvTotalEarnings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="â‚¹"
                    android:textSize="@dimen/_30sdp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/inter_semibold"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Remaining Balance"
                    android:textSize="@dimen/_12sdp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_medium"
                    />







            </LinearLayout>


        </RelativeLayout>








    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlwithdraw"
        android:layout_marginTop="@dimen/_175sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:padding="@dimen/_10sdp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:paddingHorizontal="@dimen/_10sdp"
                android:background="@drawable/edittext"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Amount :"
                    android:textAlignment="center"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/_12sdp" />

                <EditText
                    android:id="@+id/etAmount"
                    android:paddingVertical="@dimen/_10sdp"
                    android:paddingHorizontal="@dimen/_20sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint=""
                    android:textAlignment="textStart"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="@dimen/_10sdp"
                    android:inputType="number"
                    android:background="@drawable/edit_text_bg"
                    />

            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_marginTop="@dimen/_8sdp"
                android:paddingHorizontal="@dimen/_10sdp"
                android:background="@drawable/edittext"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Fee :"
                    android:textAlignment="center"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/_12sdp" />

                <EditText
                    android:id="@+id/etFee"
                    android:paddingVertical="@dimen/_10sdp"
                    android:paddingHorizontal="@dimen/_20sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint=""
                    android:textAlignment="center"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:inputType="none"
                    android:background="@drawable/edit_text_bg"
                    android:editable="false"
                    android:keyboardNavigationCluster="false"
                    />

            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_marginTop="@dimen/_8sdp"
                android:paddingHorizontal="@dimen/_10sdp"
                android:background="@drawable/edittext"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Actual Income :"
                    android:textAlignment="center"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/_12sdp" />

                <EditText
                    android:id="@+id/etIncome"
                    android:paddingVertical="@dimen/_10sdp"
                    android:paddingHorizontal="@dimen/_20sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint=""
                    android:textAlignment="center"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:inputType="none"
                    android:background="@drawable/edit_text_bg"
                    android:editable="false"
                    android:keyboardNavigationCluster="false"


                    />

            </LinearLayout>



            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnWithdraw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:backgroundTint="@color/primary_color"
                android:fontFamily="@font/poppins_medium"
                android:paddingVertical="@dimen/_10sdp"
                android:text="Withdraw"
                android:textAllCaps="false"
                app:cornerRadius="@dimen/_10sdp" />

        </LinearLayout>



    </RelativeLayout>


    <TextView
        android:id="@+id/tvWithdraw"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:textAlignment="textStart"
        android:textColor="@color/gold_color"
        android:textSize="@dimen/_10sdp"
         />


    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:visibility="gone"
        android:layout_below="@+id/rlwithdraw"
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




    <LinearLayout
        android:padding="@dimen/_14sdp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="History"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_medium"
            />




        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>




    </LinearLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</RelativeLayout>